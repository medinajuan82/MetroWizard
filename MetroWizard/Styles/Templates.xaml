    <Style x:Key="TextBlockStyle_Light" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/MetroWizard;component/Fonts/segoeuil.ttf#Segoe UI Light" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    <Style x:Key="TextBlockStyle_Normal" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/MetroWizard;component/Fonts/segoeui.ttf#Segoe UI" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    <Style x:Key="TextBlockStyle_Bold" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/MetroWizard;component/Fonts/seguisb.ttf#Segoe UI SemiBold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
