<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MetroBlueDarkColor">#FF3C454F</Color>
    <Color x:Key="MetroBlueLightColor">#FF71B1D1</Color>
    <Color x:Key="MetroRedLightColor">#fff8aeb2</Color>
    <SolidColorBrush x:Key="MetroBlueDarkBrush" Color="{StaticResource MetroBlueDarkColor}" />
    <SolidColorBrush x:Key="MetroBlueLightBrush" Color="{StaticResource MetroBlueLightColor}" />
    <SolidColorBrush x:Key="MetroRedLight" Color="{StaticResource MetroRedLightColor}" />
</ResourceDictionary>