<UserControl x:Class="MetroWizard.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MetroWizard.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="userControl"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Name="OnLoad">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)">
                <EasingDoubleKeyFrame KeyTime="0" Value="-381">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <VisualStateManager.CustomVisualStateManager>
            <ei:ExtendedVisualStateManager />
        </VisualStateManager.CustomVisualStateManager>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WizardStates" ei:ExtendedVisualStateManager.UseFluidLayout="True">
                <VisualStateGroup.Transitions>
                    <VisualTransition GeneratedDuration="0" />
                </VisualStateGroup.Transitions>
                <VisualState x:Name="Step1" />
                <VisualState x:Name="Step2" />
                <VisualState x:Name="Step3" />
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="grid"
              HorizontalAlignment="Left"
              VerticalAlignment="Stretch"
              RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=userControl}">
                    <ei:ControlStoryboardAction Storyboard="{StaticResource OnLoad}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid.RenderTransform>
                <CompositeTransform />
            </Grid.RenderTransform>
            <Rectangle x:Name="SideBar"
                       Grid.RowSpan="10"
                       Width="300"
                       Fill="#FF295699">
                <Rectangle.RenderTransform>
                    <CompositeTransform />
                </Rectangle.RenderTransform>
            </Rectangle>
            <TextBlock x:Name="tbProductName"
                       Grid.Row="0"
                       Margin="20,20,0,0"
                       FontSize="36"
                       Style="{StaticResource TextBlockStyle_Light}"
                       Text="Sales Portal" />
            <TextBlock x:Name="tbFeature"
                       Grid.Row="1"
                       Margin="20,0,0,0"
                       FontSize="18"
                       Style="{StaticResource TextBlockStyle_Light}"
                       Text="Derivatives" />
            <TextBlock x:Name="tbContext"
                       Grid.Row="2"
                       Margin="20,40,0,0"
                       FontSize="16"
                       Style="{StaticResource TextBlockStyle_Light}"
                       Text="Insert Product Wizard" />
            <Line x:Name="SeparatorLine"
                  Grid.Row="3"
                  Stroke="{StaticResource SeparatorLineBrush}"
                  StrokeThickness="1"
                  X1="10"
                  X2="290"
                  Y1="20"
                  Y2="20" />
            <Rectangle Fill="#FF8FB0E0" HorizontalAlignment="Left" Margin="0,0,0,-5" Grid.Row="4" Width="300" Height="45"/>
            <c:WizardItemDisplay Grid.Row="4"
                                 Background="#FFFD0F0F"
                                 Image="Images/ID Card.png"
                                 Text="1.    Unique Identifiers" />
            <c:WizardItemDisplay Grid.Row="5"
                                 Image="Images/Currency.png"
                                 Text="2.    Available Currencies" />
            <c:WizardItemDisplay Grid.Row="6"
                                 Image="Images/Customer.png"
                                 ImageHeight="25"
                                 ImageWidth="25"
                                 Text="3.    Sales Partners" />
            <c:WizardItemDisplay Grid.Row="7"
                                 Image="Images/Check.png"
                                 ImageHeight="25"
                                 ImageWidth="25"
                                 Text="4.    Confirm" />
        </Grid>
    </Grid>
</UserControl>